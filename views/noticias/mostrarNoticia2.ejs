    <div id="<%=noticia.id%>" class="collapse">
       <p> <%= noticia.historia %></p>
        <p><img src="/imagesNoticia/<%=noticia.foto%> " alt="" width='250px'></p>
    </div></td>
   <td> <a href="/editarNoticia/<%= noticia.id %>">Editar</a>
    <a href="/borrarNoticia/<%= noticia.id %>">Borrar</a></td>
</tr>
    <% }); %> 
</div>
</tbody>
</table>
<div class="card-footer"></div>
</div>
