        <thead>
            <div class="card-header">
    <h2><center>Noticias</center></h2>
</div>
</thead>
<tbody>
    <div class="card-header">
    <% noticias.forEach((noticia) => { %>
        <tr>
     <td>  <h3><%= noticia.titulo %></h3> 
